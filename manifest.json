
{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Parser",
  "version": "1.0",
  "description": "Parse ChatGPT prompts into the side panel",
  "permissions": ["sidePanel", "scripting", "storage"],
  "host_permissions": ["https://chat.openai.com/*"],
  "action": {
    "default_title": "ChatGPT Prompt Parser"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}